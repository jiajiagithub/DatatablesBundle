{#
DatatablesBundle controller
<div data-controller="sg--datatables--datatable">
#}

<div data-controller="app">
    <table data-app-target="sgdatatable"
           {% include '@SgDatatables/datatable/ajax.html.twig' %}
           {% include '@SgDatatables/datatable/features.html.twig' %}
           data-column-options="{{ sg_datatable.columns|json_encode|e}}"
           class="display" style="width:100%"
    >
        <thead>
            <tr>
                {% for column in sg_datatable.columns %}
                    <th>{{ column.dql }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tfoot>
        </tfoot>
    </table>
</div>
