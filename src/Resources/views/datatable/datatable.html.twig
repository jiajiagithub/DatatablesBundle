{# dump(sg_datatables_view) #}

<table id="table_id" class="display">
    <thead>
    </thead>
    <tfoot>
    </tfoot>
</table>

<script type="text/javascript">
    $(document).ready( function () {
        $('#table_id').DataTable(
            {
                ajax: {
                    url: '{{ path('table_content') }}',
                    type: 'POST'
                },
                columns: [
                    {% for col in sg_datatables_view.getColumnBuilder().getColumns() %}
                    {
                        title: '{{ col.getDql() }}',
                        data: '{{ col.getDql() }}',
                    },
                    {% endfor %}
                ]
            }
        );
    } );
</script>
