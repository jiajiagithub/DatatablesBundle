<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Twig Extension -->
        <!--suppress TaggedExtendsInterfaceClass -->
        <service id="sg_datatables.twig.datatable_twig_extension"
                 class="Sg\DatatablesBundle\Twig\DatatableTwigExtension">
            <tag name="twig.extension"/>
        </service>

        <!-- Datatables container -->
        <service id="sg_datatables.datatables.datatables" class="Sg\DatatablesBundle\Datatables\Datatables">
            <argument type="service" id="logger"/>
        </service>
        <service id="Sg\DatatablesBundle\Datatables\Datatables" alias="sg_datatables.datatables.datatables" />

        <!-- BooleanRenderer -->
        <service id="sg_datatables.datatable_renderer.boolean_renderer"
                 class="Sg\DatatablesBundle\Datatable\Renderer\BooleanRenderer"
        />
        <service id="Sg\DatatablesBundle\Datatable\Renderer\BooleanRenderer"
                 alias="sg_datatables.datatable_renderer.boolean_renderer"
        />

        <!-- HtmlFormatRenderer -->
        <service id="sg_datatables.datatable_renderer.html_format_renderer"
                 class="Sg\DatatablesBundle\Datatable\Renderer\HtmlFormatRenderer"
        />
        <service id="Sg\DatatablesBundle\Datatable\Renderer\HtmlFormatRenderer"
                 alias="sg_datatables.datatable_renderer.html_format_renderer"
        />

    </services>
</container>
