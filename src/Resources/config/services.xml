<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sg_datatables.datatable.abstract_datatable" class="Sg\DatatablesBundle\Datatable\AbstractDatatable" abstract="true" />
        <service id="Sg\DatatablesBundle\Datatable\AbstractDatatable" alias="sg_datatables.datatable.abstract_datatable" />

        <service id="sg_datatables.twig.extension" class="Sg\DatatablesBundle\Twig\DatatableTwigExtension">
            <tag name="twig.extension"/>
            <argument type="service" id="event_dispatcher"/>
        </service>
    </services>
</container>
